<div class="container">
    <div class="row">
        <div class="col-xs-3">

            <!-- プロフィール -->
            <%= render 'users/info', user: @user %>
            <!-- プロフィール -->

            <!-- 新規投稿 -->

            <%= render 'books/new', book: @book %>

            <!-- 新規投稿 -->

        </div>




            <!-- ユーザ一覧画面 -->
        <div class="col-xs-9">
            <h2>Users</h2>

                <table class ="table table">
                    <thead>
                        <tr>
                            <th>image</th> <th>name</th><th colspan="3"></th>
                        </tr>
                    </thead>

                   <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                    <td>
                                        <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= link_to "show", user_path(user.id) %>
                                    </td>
                                </tr>
                            <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>
